#!/usr/bin/node

import sys

# Check if the file path is given as the first argument
if len(sys.argv) > 1:
    # Assign the file path to a variable
    file_path = sys.argv[1]
    # Try to open the file in read mode with utf-8 encoding
    try:
        with open(file_path, "r", encoding="utf-8") as file:
            # Read and print the content of the file
            content = file.read()
            print(content)
    # If an error occurred during the reading, print the error object
    except Exception as e:
        print(e)
# If the file path is not given, print a message
else:
    print("Please provide a file path as the first argument.")
